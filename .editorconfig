# 这是 EditorConfig 配置文件，用于统一代码风格
root = true

# 默认规则：应用于所有文件
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# PHP 文件（PSR-12 推荐：4 空格缩进）
[*.php]
indent_size = 4

# JSON 文件（一般是 2 空格缩进）
[*.json]
indent_size = 2

# YAML 文件（社区推荐 2 空格缩进）
[*.{yml,yaml}]
indent_size = 2

# docker-compose 文件（习惯用 4 空格缩进）
[{compose.sample.yml,compose.yml}]
indent_size = 4

# Markdown 文件（保留行尾空格，避免破坏手动换行）
[*.md]
trim_trailing_whitespace = false

# Shell 脚本（一般 2 空格缩进）
[*.sh]
indent_size = 2

# Makefile 必须使用 Tab
[Makefile]
indent_style = tab

# .env 文件（缩进没意义，但为了对齐用 2 空格）
[*.env]
indent_size = 2
